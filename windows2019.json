{
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "cpus": "2",
      "memory": "4096",
      "disk_size": "51200",
      "floppy_files": [
        "unattend/autounattend.xml",
        "drivers/*"
      ],
      "disk_interface": "virtio",
      "disk_cache": "writeback",
      "disk_discard": "ignore",
      "format": "qcow2",
      "headless": "false",
      "iso_urls": [
        "https://software-download.microsoft.com/download/pr/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso"
      ],
      "iso_checksum": "3022424f777b66a698047ba1c37812026b9714c5",
      "shutdown_command": "C:\\Windows\\Temp\\sysprep.bat",
      "shutdown_timeout": "15m",
      "output_directory": "/var/tmp/windows-server-2019-standard-x64-qemu",
      "vm_name": "windows-server-2019-standard-x64",
      "use_default_display": false,
      "communicator": "winrm",
      "winrm_username": "Admin",
      "winrm_password": "password",
      "winrm_insecure": "true",
      "winrm_use_ssl": "true",
      "winrm_timeout": "30m"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false, "compression_level": 9,
      "type": "vagrant", "vagrantfile_template": "windows.template",
      "output": "/var/tmp/windows-server-2019-standard-x64.box"
    }
  ],
  "provisioners": [
    { "type": "sleep", "duration": "2m" },
    
    { 
      "type": "shell-local",
      "command": "ansible-playbook --extra-vars='ansible_user=Admin ansible_password=password' -i 127.0.0.1, ansible/ansible_init.yml",
      "environment_vars": [ "ANSIBLE_REMOTE_PORT={{ build `Port` }}" ]
    },

    { "type": "file", "source": "scripts/sysprep.bat",         "destination": "C:\\Windows\\Temp\\sysprep.bat" },
    { "type": "file", "source": "unattend/unattend.xml",       "destination": "C:\\Windows\\Temp\\unattend.xml" },

    { "type": "powershell", "inline": ["Set Execution-Policy  RemoteSigned -Force"] },

    {"scripts": [
      "./scripts/install_puppet.ps1"
    ],
    "type": "powershell"
    }
  ]
}